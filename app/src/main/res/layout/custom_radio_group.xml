<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rgDialogSort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="4dp"
    android:orientation="vertical"
    android:padding="8dp">

    <RadioButton
        android:id="@+id/rbSortNameAsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/sort_name_asc_txt"
        android:textColor="@color/black" />

    <RadioButton
        android:id="@+id/rbSortNameDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:text="@string/sort_name_desc_txt"
        android:textColor="@color/black" />

    <RadioButton
        android:id="@+id/rbSortCb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/sort_cb_txt"
        android:textColor="@color/black" />

</RadioGroup>